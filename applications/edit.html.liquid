<div class="card mb-3">
      <div class="card-header">
        <a href="{{ application.url }}">
          <i class="fas fa-chevron-left"></i>
          {{ application.name }}
        </a>
        {% if application.can.be_destroyed? %}
          <a href="{{ application.path }}" class="pull-right" data-method="delete" data-confirm="Are you sure you want to delete the application {{ application.name }} ?">
            <i class="fas fa-trash"></i>
            Delete {{ application.name }}
          </a>
        {% endif %}
      </div>
      <div class="card-body">
        {% form 'application.update', application, class: "form-horizontal" %}
          {% include 'applications/form' %}
          
            <div class="form-group">
              <div class="col-md-6">
                <input class="btn btn-success"
                  name="commit"
                  type="submit"
                  value="Update Application" />
              </div>
            </div>
          
        {% endform %}
      </div>
</div>
